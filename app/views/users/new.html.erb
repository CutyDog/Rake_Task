<h1>Add New User</h1>

<div class="container">
    <%= form_for(@user, url: users_path) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
</div>