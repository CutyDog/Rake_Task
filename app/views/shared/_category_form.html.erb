<div class="p-3">Add Favorite Categories</div>
<%= form_for(@favorite, url: favorite_path(@favorite), class: 'form-horizontal') do |f| %>
    <% @categories.each do |category| %>
    <div class="form-check">
        <%= f.check_box category, class: "form-check-input", type: "checkbox", id: "defaultCheck1" %>
        <%= f.label category, class: "form-check-label", for: "defaultCheck1" %>
    </div>
    <% end %>
    <%= f.submit "Enter Categories", class: "btn btn-primary" %>
<% end %>